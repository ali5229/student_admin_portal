<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#040404"
    android:orientation="vertical"
    tools:context=".LoginAs">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/unknown"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/lilitaone_regular"
        android:textSize="32sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Account Type"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_marginTop="80dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Login As Student"
        android:textAllCaps="false"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        android:background="@drawable/bg_for_button"
        android:id="@+id/student_login_btn"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Login As Admin"
        android:textAllCaps="false"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_bold"
        android:background="@drawable/bg_for_button"
        android:id="@+id/admin_login_btn"
        />


</LinearLayout>